<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Label?>

<VBox styleClass="regLogBox" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.swehd.Controller"
          alignment="CENTER"  minWidth="400" minHeight="600" spacing="15"
          style="-fx-background-color: #343434;" stylesheets="@LogReg.css">

    <children>
        <Text text="Log in"/>
        <TextField promptText="username" maxWidth="250"/>
        <PasswordField promptText="password" maxWidth="250"/>
        <Button styleClass="regLogButton" text="Login"/>
        <Text text="or"
              style="-fx-fill: #FFFFFF;
            -fx-font-size: 15px;"/>
        <Button styleClass="registerButton" text="Register" onAction="#switchToRegister"/>
    </children>

</VBox>